generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  tickets   Ticket[]
}

model Stadium {
  id       String  @id @default(uuid())
  name     String  @unique
  location String
  capacity Int
  section  Json
  matches  Match[]
}

model Match {
  id        String   @id @default(uuid())
  homeTeam  String
  awayTeam  String
  stadium   Stadium  @relation(fields: [stadiumId], references: [id])
  stadiumId String
  date      DateTime
  time      DateTime
  gameType  String
  gameStage String
  tickets   Ticket[]
}

model Ticket {
  id          String  @id @default(uuid())
  section     String?
  scannerCode String
  match       Match   @relation(fields: [matchId], references: [id])
  matchId     String
  user        User    @relation(fields: [userId], references: [id])
  userId      String
}
